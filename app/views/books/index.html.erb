<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
<%= render'users/show', user: @user %>
<%= render'books/new', book: @book %>
   </div>


<div class="col-md-8 offset-md-1">
<% if flash[:notice] %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
    <tr>
      <th><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user,:profile_image,:fill,40,40,fallback: 'no_image.jpeg',size: '40x40' %>
      <% end %>
     </th>

     <td><%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
     </td>
     <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>