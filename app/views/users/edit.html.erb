<h1>User info</h1>


<% if @user.errors.any? %>
  <h2 class="error"><%= pluralize(@user.errors.count, "error")%> prohibited this obj from being saved: </h2>
  <% @user.errors.full_messages.each do |message| %>
    <div class="error_message"><%= message %></div>
  <% end %>
<% end %>

<%= form_with model: @user, local:true do |f| %>

   <div class="form-group">
   <label for="exampleInputName">Name</label>
   <%= f.text_field :name, class: "form-control" %>
   </div>

  <label for="exampleInputImage">Image</label><br />
   <%= f.attachment_field :profile_image %>

   <div class="form-group mt-3">
   <label for="exampleInputIntroduction">Introduction</label>
   <%= f.text_area :introduction, class: "form-control" %>
   </div>

   <%= f.submit 'Update User', class: "btn btn-secondary" %>
<% end %>

