<%= render'users/show', user: @user %>
<%= render'books/new', book: @book %>

<h1>Book Detail</h1>
<table class="table">
  <tbody>
    <tr>
     <th scope="row"><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user,:profile_image,:fill,100,100,fallback: 'no_image.jpeg'%>
          <p><%= @user.name %></p>
          <% end %>
     </th>
     <td>
       <%= link_to book_path(@user_book.id) do %>
        <%= @user_book.title %>
       <% end %>
     </td>
     <td>
        <%= @user_book.body %>
     </td>
     <td>
         <% if @user_book.user == current_user %>
        <button type="button" class="btn btn-success"><%= link_to 'edit', edit_book_path %></button>
         <% end %>
     </td>
     <td>
          <% if @user_book.user == current_user %>
        <button type="button" class="btn btn-danger"><%= link_to 'destroy', book_path, method: :delete %></button>
         <% end %>
     </td>
    </tr>
  </tbody>
</table>
