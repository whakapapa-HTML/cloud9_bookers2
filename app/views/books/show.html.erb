<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
<%= render'users/show', user: @user %>
<%= render'books/new', book: @book %>
   </div>


<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
  <tbody>
    <tr>
     <th scope="row"><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user,:profile_image,:fill,100,100,fallback: 'no_image.jpeg', size: '40x40' %>
          <p><%= @user.name %></p>
          <% end %>
     </th>
     <td>
       <%= link_to book_path(@user_book.id) do %>
        <%= @user_book.title %>
       <% end %>
     </td>
     <td>
        <%= @user_book.body %>
     </td>
     <td>
         <% if @user_book.user == current_user %>
        <button type="button" class="btn btn-success "><%= link_to 'Edit', edit_book_path, class: 'text-white' %></button>
         <% end %>
     </td>
     <td>
          <% if @user_book.user == current_user %>
        <button type="button" class="btn btn-danger"><%= link_to 'Destroy', book_path, method: :delete, class: 'text-white' %></button>
         <% end %>
     </td>
    </tr>
  </tbody>
</table>

</div>
</div>
</div>