<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
</table>


<% end %>

<h1>User info</h1>
<% @books.each do |book| %>

<div>

<%= book.user.name %>


</div>
<% end %> 

<%= link_to "fontawesome"%>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body%>
  <%= f.submit 'Create Book' %>
<% end %>